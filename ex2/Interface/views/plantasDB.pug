extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Plantas
    .w3-container
      table.w3-table-all
        tr
          th ID
          th Freguesia
          th Espécie
          th Estado 
          th Número de Intervenções
        
        each planta in plantas
          tr
            td(onclick='changePage(\"' + planta._id + '\")')= planta._id
            td= planta.Freguesia
            td(onclick='changeSpecies(\"' + planta.Espécie + '\")')= planta.Espécie
            td= planta.Estado
            td= planta.N_Intervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by Marta Sá
            