extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h2 Espécie: #{plantas[0].Espécie}
      h2 Nome Científico: #{plantas[0].Nome_Cientifico}
      
    .w3-container
        table.w3-table-all
            tr
                th ID
                th Freguesia
                th Estado 
                th Número de Intervenções
        
            each planta in plantas
                tr
                    td #[a(href="/"+planta._id)=planta._id]
                    td= planta.Freguesia
                    td= planta.Estado
                    td= planta.N_Intervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by Marta Sá
            