extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 ID Planta: #{planta._id}

    br          
    .w3-container.w3-padding
        h4 Número de Registo: #{planta.N_Registo}
        h4 Código de Rua: #{planta.Cod_Rua}
        h4 Rua: #{planta.Rua}
        h4 Local: #{planta.Local}
        h4 Freguesia: #{planta.Freguesia}
        h4 Espécie: #{planta.Espécie}
        h4 Nome Científico: #{planta.Nome_Cientifico}
        h4 Origem: #{planta.Origem}
        h4 Data de Plantação: #{planta.Data_Plantação}
        h4 Estado: #{planta.Estado}
        h4 Caldeira: #{planta.Caldeira}
        h4 Tutor: #{planta.Tutor}
        h4 Implantação: #{planta.Implantação}
        h4 Gestor: #{planta.Gestor}
        h4 Data de Atualização: #{planta.Data_Atualizacao}
